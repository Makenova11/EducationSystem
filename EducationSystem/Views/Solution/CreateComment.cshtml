@model EducationSystem.ViewModels.SolutionCriterionCodeScoreVM

@{
    ViewBag.Title = "Create";
}

@*<h2>
    Добавление баллов и комментариев к решению @ViewBag.description Класс @ViewBag.Class Задание @ViewBag.Number
    Предмет @ViewBag.Subject
</h2>*@


@using (Html.BeginForm("CreateComment", "Solution", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.possibleScore, "Балл", new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.possibleScore, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.possibleScore, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Comment, "Комментарий", new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Comment)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.isValid, "Правильность", new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.isValid, ViewData["DropDownItems"] as List<SelectListItem> )
            @Html.ValidationMessageFor(model => model.isValid)

        </div>
    </div>

    @Html.HiddenFor(model => model.SolutionCode,
        new { Value = ViewBag.SolutionCode })
    @Html.HiddenFor(model => model.CriterionCode,
       new { Value = ViewBag.CriterionCode })

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Добавить" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Назад", "SolutionTest", new { SolutionCode = ViewBag.SolutionCode }, new { @class = "link-page-task btn btn-default" })
</div>
