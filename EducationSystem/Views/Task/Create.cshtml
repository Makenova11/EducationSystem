@model EducationSystem.Models.Task

@{
    ViewBag.Title = "Create";
}

<h2>Добавление @ViewBag.numTask задания @ViewBag.numClass класс Предмет: @ViewBag.nameSubj  </h2>


@{
    ViewBag.Title = "Create";
}


@using (Html.BeginForm("Create", "Task", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.TaskImage, "Файл задания", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="editor-field">
            <input type="file" name="TaskImage" />
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Year, "Год использования", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Year, new { htmlAttributes = new { @class = "form-control", @type = "number" } })
            @Html.ValidationMessageFor(model => model.Year, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.CriterionFile, "Файл критерия", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="editor-field">
            <input type="file" name="CriterionFileImage" />
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.EventCode, "Мероприятие", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("EventCode", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.EventCode, "", new { @class = "text-danger" })
        </div>
    </div>
    @Html.HiddenFor(model => model.SubjectTaskCode,
        new { Value = ViewBag.subjTaskCode })
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Добавить" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Назад", "Index", "Task", new { subjTaskCode = ViewBag.subjTaskCode })
</div>