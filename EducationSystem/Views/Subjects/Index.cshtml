@using EducationSystem.Helpers
@model IEnumerable<EducationSystem.Models.Subject>

@{
    ViewBag.Title = "Index";
}


<p>
        @Html.ActionLink("Добавить предмет", "Create", new
   {
       numClass = ViewBag.classNum
   })
</p>

<div class="container container-main-list">
    <h2 class="title-for-all-subject">@ViewBag.classNum класс</h2>

    <div class="accordion">
        <ul class="accordion-list">
            @foreach (var item in Model)
            {
                <li class="accordion-item">
                    <input type="checkbox" checked>
                    <i></i>
                    <h2 class="title_block">@Html.DisplayFor(modelItem => item.Name)</h2>
                    <div class="msg">
                        @ListHelper.CreateList(item.SubjectCode, null)
                    </div>
                    <a href="#" class="pen-icon">
                        <svg width="40" height="40" viewBox="0 0 40 40" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <rect opacity="0.16" x="0.5" y="0.5" width="39" height="39" rx="7.5" stroke="#263238" />
                            <path d="M28.71 15.0425C29.1 14.6525 29.1 14.0025 28.71 13.6325L26.37 11.2925C26 10.9025 25.35 10.9025 24.96 11.2925L23.12 13.1225L26.87 16.8725L28.71 15.0425ZM11 25.2525V29.0025H14.75L25.81 17.9325L22.06 14.1825L11 25.2525Z" fill="#979797" />
                        </svg>
                    </a>
                </li>
            }
        </ul>
    </div>
</div>

